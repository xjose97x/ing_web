<h1>Users</h1>

<table>
<thead>
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Email</th>
    <th>Birth date</th>
    <th>Actions</th>
  </tr>
</thead>
<tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.first_name %></td>
      <td><%= user.last_name %></td>
      <td><%= user.email %></td>
      <td><%= user.birth_date %></td>
      <td><%= link_to "Ver", user_path(user) %> <%= link_to "Editar", edit_user_path(user) %> <%= link_to "Eliminar", user_path(user), data: { turbo_method: :delete, turbo_confirm: "Estas seguro?" } %></td>
    </tr>
  <% end %>
</tbody>
</table>


<%= link_to "Nuevo usuario", new_user_path %>